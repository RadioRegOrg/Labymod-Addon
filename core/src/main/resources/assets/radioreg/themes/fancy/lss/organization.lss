Button {
  filter: blur(0);
}

.scroll-container {
  write-to-stencil-buffer: true;
  background-color: rgba(0, 0, 0, 255);
  border-radius: 5 5 5 0;
}

.top-container {
  margin-top: -0.2;
  left: 0;
  top: 0;
  width: 100%;
  height: 15.5;
  border-radius: 5;
  filter: blur(var(--addon-profile-blur-radius));
  background-color: var(--addon-profile-scroll-color);
  padding: 8;

  Button {
    top: 0;
    left: 0;
    height: 15.5;
    width: fit-content;
    padding: 0 4 0 4;
    filter: blur(0);
    min-width: 20;

    background-color: rgba(0, 0, 0, 180);

    Component {
      font-size: 0.85;
      font-weight: 300;
      alignment-x: center;
    }

    Icon {
      width: 8;
      height: 8;
    }
  }

   .back-button {
     border-thickness: 1;
     border-softness: 0.25;
     border-color: rgba(255, 255, 255, 180);
   }
}

.scroll-container {
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

Scroll {
  left: 0;
  top: 0;
  right: 0;
  margin-right: 0;
  bottom: 0;
  scroll-speed: 50;
  padding-bottom: 10;


  Scrollbar {
    use-lss-position: true;
    margin-left: -5;
    top: 35.5;
    right: 5;
    width: 5;
    bottom: 5;
  }
}

.container {
  left: 0;
  top: 0;
  width: 100%;
  height: fit-content;
  space-between-entries: 0;
}

.details-with-thumbnail {
  height: 120;
  padding-top: -0.1;

  .thumbnail {
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    border-radius: 5 5 0 0;

    object-fit: cover;
    icon-width: 100%;
  }

  Gradient {
    top: 0;
    left: 0;

    direction: vertical-top-bottom;
    color-start: rgba(0, 0, 0, 110);
    color-end: rgba(0, 0, 0, 225);
  }
}

.details-container {
  left: 0;
  top: 0;
  width: 100%;

  .icon {
    left: 15;
    bottom: 15;
    height: 58;
    width: 58;
    border-radius: 5;

    icon-width: 58;
    icon-height: 58;
  }
}