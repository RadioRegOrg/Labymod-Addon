@import super();

.flexible-content-entry {
  width: 100%;
  height: 100%;
}

.stations-list {
  space-between-entries: 4;
  height: 100%;
  width: 100%;
  Station {
    background-color: rgba(70, 70, 70, 80);
    border-radius: 5;
    border-thickness: 0;
    height: 30;

    .background-cover {
      border-radius: 5;
      background-color: rgba(180,160,161,18);
    }

    .avatar {
      border-radius: 5;
    }

    &:hover {
      background-color: rgba(90, 90, 90, 100);
    }

  }
  .selected {
    padding: 1 !important;
    border: none !important;

    background-color: rgba(100, 100, 100, 150) !important;

    border-color: #008FE8 !important;
    border-thickness: 1.5 !important;
    border-softness: 0.5 !important;
  }
}