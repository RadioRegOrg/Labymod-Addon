.container {
  width: 90%;
  max-width: 440;
  height: 100%;
  left: 50%;
  top: 0;
  alignment-x: center;
  orientation: vertical;
  padding: 15 15 15 5 15;
  use-floating-point-position: true;
  background-color: var(--background-color);
  bottom: 20;
  filter: blur(25);
  border-radius: var(--border-radius);


  .header {
    use-floating-point-position: true;
    height: 16;
    width: 100%;
    space-between-entries: 2;
    orientation: horizontal;
    margin-bottom: 5;

    .search-widget {
      width: 100%;
      border-radius: 5;
      background-color: rgba(255,255,255,100);
      textColor: white;
      height: 16;
      font-size: 0.8;
      place-holder-color: rgb(50,50,50);
    }
  }

  .screen-renderer {
    height: 100%;
    width: 100%;
    use-floating-point-position: true;
  }

  TilesGrid {
    use-floating-point-position: true;
    width: 100%;
    height: fit-content;
    tile-height: 150;
    space-between-entries: 5;
    tiles-per-line: 4;
  }

  Station {
    border-color: rgba(255,255,255,50);
    border-thickness: 0;
    background-color-transition-duration: 150;
    renderer: Background;
    width: 75;
    height: 125;
    stencil: true;
    border-radius: 5;
    use-floating-point-position: true;

    .item-container {
      left: 0;
      right: 0;
      bottom: 0;
      top: 0;
      width: 100%;
      height: fit-content;
      orientation: vertical;

      .avatar {
        border-radius: 5;
        width: 75;
        height: 75;
      }

      .item-text-container {
        height: 50;
        width: 100%;
        top: 0;
        left: 0;

        .name {
          font-size: 0.9;
          font-weight: 700;
          max-width: 100%;
          use-floating-point-position: true;
          margin: 5 0 5 0;
          max-lines: 1;
        }

        .title {
          font-size: 0.95;
          font-weight: 400;
          max-width: 100%;
          use-floating-point-position: true;
          max-lines: 1;
        }

        .artist {
           use-floating-point-position: true;
          font-style: italic;
          max-width: 100%;
          font-size: 0.70;
          max-lines: 1;
        }
      }
    }
  }
}